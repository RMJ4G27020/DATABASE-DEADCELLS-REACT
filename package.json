{
  "name": "tierlist-app",
  "version": "1.0.0",
  "description": "Simple web app with database connection using Express and Sequelize",
  "main": "src/server.js",
  "scripts": {
  "start": "node src/server.js",
  "dev": "node --watch src/server.js",
  "client": "cd client && npm run dev",
  "dev:all": "concurrently \"npm run dev\" \"npm run client\" --names \"API,FRONT\" --prefix-colors \"blue,magenta\"",
  "start:all": "concurrently \"npm start\" \"npm run client\" --names \"API,FRONT\" --prefix-colors \"blue,magenta\"",
  "test": "jest",
  "db:init": "node scripts/init-db.js",
  "demo": "node scripts/demo-flow.js"
  },
  "dependencies": {
    "express": "^4.19.2",
    "sequelize": "^6.37.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  }
}
